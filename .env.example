# Environment
ENV=development
DATABASE_URL=

# ============================================
# OAuth2 LLM Configuration (New)
# ============================================

# Shared OAuth2 Auth URL
OAUTH_AUTH_URL=https://auth.example.com/oauth2/token

# Separate API Endpoints
LLM_ENDPOINT_URL=https://api.example.com/v1/chat/completions
EMBEDDINGS_ENDPOINT_URL=https://api.example.com/v1/embeddings

# Codegen Instance
CODEGEN_CLIENT_ID=your-codegen-client-id
CODEGEN_CLIENT_SECRET=your-codegen-client-secret

# Docgen Instance
DOCGEN_CLIENT_ID=your-docgen-client-id
DOCGEN_CLIENT_SECRET=your-docgen-client-secret

# Token Settings
OAUTH_TOKEN_REFRESH_BUFFER_SECONDS=60
OAUTH_SCOPE=customscope
OAUTH_SSL_VERIFY=false

# Model Names
LLM_MODEL=gpt-40-dev
EMBEDDINGS_MODEL=text-embedding-ada-002-2-gs

# LLM Parameters
LLM_TEMPERATURE=0.1
LLM_MAX_TOKENS=16384
LLM_TIMEOUT=600.0
EMBEDDING_DIMENSION=1536

# ============================================
# Legacy Settings (kept for reference/migration)
# ============================================

# Anthropic Azure Foundry (deprecated - use OAuth above)
# AZURE_ANTHROPIC_ENDPOINT=
# AZURE_ANTHROPIC_API_KEY=
# AZURE_ANTHROPIC_MODEL=

# Azure OpenAI Embeddings (deprecated - use OAuth above)
# AZURE_OPENAI_EMBED_API_ENDPOINT=
# AZURE_OPENAI_EMBED_API_KEY=
# AZURE_OPENAI_EMBED_MODEL=
# AZURE_OPENAI_EMBED_VERSION=
# AZURE_OPENAI_EMBED_DEPLOYMENT_NAME=

# ============================================
# MLflow (development only)
# ============================================
MLFLOW_ENABLED=false
MLFLOW_TRACKING_URI=http://localhost:5000
MLFLOW_EXPERIMENT_NAME=cobol-converter
